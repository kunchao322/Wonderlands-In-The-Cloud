<%layout('layouts/boilerplates')%>
<div class="text-center">Edit Destination</div>

<div class="col-6 offset-3">

    <form action="/destinations/<%=destination._id%>?_method=PUT" method="POST" nonvalidate enctype="multipart/form-data">
        <div class="mb-3">
            <label class="form-label" for="title">Destination</label>
            <input class="form-control" type="text" id="title" name="destination[title]" value="<%= destination.title %>"
                required>
        </div>

        <div class="mb-3">
            <label class="form-label" for="location">Location</label>
            <input class="form-control" type="text" id="location" name="destination[location]"
                value="<%= destination.location %>" required>
        </div>

        <div class="mb-3">
            <label class="form-label" for="desciption">Description</label>
            <textarea class="form-control" type="text" id="descrption" name="destination[description]"
                required><%= destination.description %></textarea>
        </div>

        <div class="mb-3">
            <label class="form-label" for="price">Travel Cost</label>
            <div class="input-group">
                <span class="input-group-text" id="price-label">$</span>
                <input type="text" class="form-control" placeholder="0.00" aria-label="price"
                    aria-describedby="price-label" name="destination[price]" value="<%= destination.price %>" required>
            </div>
        </div>

        <div class="mb-3">
            <label class="form-label" for="image">Add Images</label>
            <input type="file" name="image" id="image" multiple>
        </div>

        <div class="mb-3">
            <% destination.images.forEach(function(img, i) {%>
            <img src="<%= img.thumbnail %>" class="img-thumbnail" alt="">
            <div class="form-check-inline">
                <input type="checkbox" id="image-<%=i%>" name="deleteImages[]" value="<%=img.filename%>">
            </div>
            <label for="image-<%=i%>">Delete</label>
            <%})%>
        </div>

        <button class="btn btn-info">Update Destination</button>
    </form>

</div>